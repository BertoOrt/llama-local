        i(class="fa fa-copyright")
        |  Local Llamas
      .nav-tabs
        a( href='http://github.com/bertoort/llama-local') 
          i.tabs.github.icon 
          | Repo
        a( href='http://bertoort.com') 
          i.tabs.globe.icon
          | Author
.ui.basic.modal.home
  .header
    | Log in
  .image.content
    .image
      i.cloud.icon
    .description(style="width: 100%")
      form.ui.form(name="loginForm")
        .field
          input.full(type='email',maxlength="20", ng-model="loginEmail", name='email', placeholder='Email' required)
        .field
          input.full(type='password',maxlength="20", ng-model="loginPassword", name='password', ng-minlength="6" placeholder='Password' required)
        .ui.grid
          .row
            .four.wide.column
              button.ui.green.inverted.basic.button(ng-class="{'loading': loginSubmitted == true}", ng-disabled="loginForm.$invalid", ng-click="login()") Submit
            .four.wide.column
              .error(ng-show="loginForm.email.$dirty && loginForm.email.$invalid") Invalid Email
              .error(ng-show="invalidPassword") Invalid Password or Email
            .four.wide.column
              .error(ng-show="loginForm.password.$touched && loginForm.password.$invalid") Password too short
  .actions
    .one.fluid.ui.inverted.buttons
      a.ui.facebook.button(href="https://arcane-castle-8723.herokuapp.com/auth/facebook")
        i.facebook.icon
        |         Facebook
.ui.modal.email
  i.close.icon
  .header
    | Send Us An Email
  .content
    form(name='contactForm').ui.form
      .field
        input(type='email' placeholder="Your Email" ng-model="contactEmail" required)
      .field
        input(type='text' placeholder="Subject" ng-model="contactSubject" required)
      .field
        textarea(placeholder="Go ahead, let it all out..." ng-model="contactBody" ng-minlength="10" required)
  .actions
    .ui.black.deny.button
      | Nevermind
    button.ui.positive.right.labeled.icon.button(ng-disabled="contactForm.$invalid" ng-click='sendMail()')
      | Send
      i.checkmark.icon
script(src='/map/allmap.min.js')
script(src='/particles/allparticles.min.js')
